<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardViewFragment">

    <!--Game block-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/card_gameimg"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/board_game3_description"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/monopoly" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/card_gametitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monopoly"
                            android:textSize="20dp"
                            android:layout_margin="5dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="SAVE BUTTON"
                            android:src="@drawable/ic_save"
                            android:adjustViewBounds="true"
                            app:tint="#F44336"
                            android:background="@null"/>
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/card_RatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="4.1"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:theme="@style/RatingBar" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/card_tag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Party"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            />

                        <TextView
                            android:id="@+id/card_tag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:text=">2Players"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/card_tag3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="Duration"
                            android:adjustViewBounds="true"
                            app:tint="#F44336"
                            android:background="@null"/>
                        <TextView
                            android:id="@+id/card_timeToPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2hrs"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            />
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>





        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>